<odoo>
    <!-- Menu chính -->
    <menuitem id="menu_crafting_main" 
              name="Minecraft Crafting" 
              sequence="10"/>
    
    <!-- Menu cha -->
    <menuitem id="menu_crafting_root"
              name="Crafting"
              parent="menu_crafting_main"
              sequence="10"/>

    <!-- Định nghĩa action với hỗ trợ import/export -->
    <record id="action_crafting_item" model="ir.actions.act_window">
        <field name="name">Items</field>
        <field name="res_model">crafting.item</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'import': True, 'export': True}</field>
    </record>

    <!-- Menu Items -->
    <menuitem id="menu_crafting_items"
              name="Items"
              parent="menu_crafting_root"
              action="action_crafting_item"
              sequence="10"/>

    <!-- Tree & Form view cho Item -->
    <record id="view_crafting_item_tree" model="ir.ui.view">
        <field name="name">crafting.item.tree</field>
        <field name="model">crafting.item</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="category"/>
                <field name="import_id"/>
            </tree>
        </field>
    </record>

    <record id="view_crafting_item_form" model="ir.ui.view">
        <field name="name">crafting.item.form</field>
        <field name="model">crafting.item</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="category"/>
                        <field name="import_id"/>
                        <field name="image" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_import_item_template" model="ir.actions.act_window">
        <field name="name">Tải Template Import Items</field>
        <field name="res_model">crafting.item</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="context">{'default_use_template': True}</field>
    </record>
</odoo>