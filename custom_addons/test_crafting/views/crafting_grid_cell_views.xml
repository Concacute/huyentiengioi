<odoo>
    <record id="view_crafting_grid_cell_tree" model="ir.ui.view">
        <field name="name">crafting.grid.cell.tree</field>
        <field name="model">crafting.grid.cell</field>
        <field name="arch" type="xml">
            <tree>
                <field name="recipe_id"/>
                <field name="row"/>
                <field name="col"/>
                <field name="item_id"/>
            </tree>
        </field>
    </record>

    <record id="view_crafting_grid_cell_form" model="ir.ui.view">
        <field name="name">crafting.grid.cell.form</field>
        <field name="model">crafting.grid.cell</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="recipe_id"/>
                        <field name="row"/>
                        <field name="col"/>
                        <field name="item_id"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
